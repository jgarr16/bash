 > /dev/pts/0
*/3 * * * * cd /Users/jrgarrigues/bin/chkrootkit-0.54;date="$(date +\%FT\%T.000-08:00)";host="$(hostname)";./chkrootkit > rept;sleep 99s;echo "$date\n$host\n$(tail rept)" > /dev/pts/0
