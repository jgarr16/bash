# changed it to run from a copy of my script in github & sending to splunk
*/60 * * * * sh -c "$(curl -fsSL https://raw.githubusercontent.com/jgarr16/bash/main/jgspeed.sh)"

# running chkrootkit at 3:14AM local & sending to splunk
  1 13 3 * * * cd /Users/jrgarrigues/bin/chkrootkit-0.54;date="$(date +\%FT\%T.000-08:00)";./chkrootkit > rept;echo "$date $(cat rept)" | nc -w 1 -u 192.168.1.107 9992
  
